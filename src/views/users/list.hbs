<div class="container text-center p-4">
  <div class="row">
    <table class="table table-responsive table-striped table-sm">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">name</th>
          <th scope="col">username</th>
          <th scope="col">password</th>
          <th>created</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
        <tr>
          <th scope="row">{{id}}</th>
          <td>{{name}}</td>
          <td>{{username}}</td>
          <td>{{password}}</td>
          <td>{{createdAt}}</td>
          <td><a href="/users/delete/{{id}}" style="color: red;"><i class="fas fa-trash-alt"></i></a></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>